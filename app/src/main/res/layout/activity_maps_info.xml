<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_layout"
        android:padding="20dp">

        <ImageView
            android:id="@+id/store_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/store_img"
            android:text="미림 파스타"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/store_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/store_name"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/store_img"
            android:text="서울특별시 관악구 대학로"
            android:textColor="#000000"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/store_area"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/store_img"
            app:srcCompat="@drawable/starstar" />

        <TextView
            android:id="@+id/store_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/store_area"
            android:layout_marginStart="5dp"
            android:layout_marginTop="33dp"
            android:layout_toEndOf="@+id/imageView13"
            android:text="3.5"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/store_img"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:text="Review"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button2"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="115dp"
            android:background="#FFFFFF"
            android:stateListAnimator="@null"
            android:text="전체보기"
            android:textColor="#999999"
            android:textSize="12sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/maps_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView26"
            android:layout_marginTop="10dp" />
    </RelativeLayout>
</ScrollView>